{% extends 'base.html.twig' %}

{% form_theme form _self 'bootstrap_4_layout.html.twig' %}

{% block body %}

<h2>Signaler la panne d'ascenseur</h2>

<p class="text-muted">Nous vous invitons à compléter quelques informations toutes facultatives afin d'en savoir plus sur votre situation et les préjudices subits</p>

{{ form_start(form) }}
    L'ascenseur est en panne depuis :
    <div class="form-group input-group">
      {{ form_widget(form.datePanne) }}
    </div>
    <hr />
    <h3>Votre usage de l'ascenseur</h3>
    {{ form_row(form.usage) }}
    <div class="form-group">
        {{ form_label(form.etage) }}
        <div class="input-group">
            {{ form_widget(form.etage) }}
            <div class="input-group-append"><span class="input-group-text">Numéro de l'étage</span></div>
        </div>
        <small class="form-text text-muted">Par exemple -2 ou 9</small>
    </div>
    {{ form_row(form.etageAtteint) }}
    <div class="form-group {% if not form.vars.value.etageAtteint %}d-none{% endif %}">
        {{ form_label(form.duree) }}
        <div class="input-group">
            {{ form_widget(form.duree) }}
            <div class="input-group-append"><span class="input-group-text">minutes</span></div>
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.commentaire) }}
        {{ form_widget(form.commentaire) }}
        <small class="form-text text-muted">Ce commentaire sera rendu public (la saisie est facultative)</small>
    </div>
    {{ form_row(form.commentaire) }}
    <hr />
    <h3>Qui êtes vous</h3>
    <div class="form-group">
        {{ form_label(form.pseudo) }}
        {{ form_widget(form.pseudo) }}
        <small class="form-text text-muted">Votre nom / pseudo sera rendu public (la saisie est facultative)</small>
    </div>
    <div class="form-group">
        {{ form_widget(form.abonnement) }}
    </div>
    <div id="signalement_infos_abonnement" class="{% if not form.vars.value.abonnement %}d-none{% endif %}">
    {{ form_row(form.email) }}
    {{ form_row(form.telephone) }}
    </div>
    <hr />
    <button type="submit" class="btn btn-block btn-success">Soumettre le signalement</button>
{{ form_end(form) }}
{% endblock %}
