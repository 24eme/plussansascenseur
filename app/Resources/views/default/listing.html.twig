{% extends 'base.html.twig' %}

{% block body %}

<h1>Les ascenseurs</h1>

<table class="table table-striped table-hover table-sm">
	<tbody>
		{% for elevator in elevators %}
		{% set photo = elevator.photos.first() %}
        <tr class="clickable-row row mx-0" data-href="{{ path('ascenseur', {id: elevator.id}) }}">
			<td class="col-2 text-center">
				{% if photo %}
            	<img src="{{ photo.getBase64Src() }}" alt="{{ photo.updatedAt |date("m/d/Y") }}" class="img-fluid" style="max-height : 80px;"/>
            	{% endif %}
			</td>
			<td valign="middle" class="col-10">
				{% if elevator.constructeurNom %}Ascenseur <strong>{{ elevator.constructeurNom }}</strong> {% endif %}{% if elevator.reference %}Ref. <strong>{{ elevator.reference }}</strong>{% endif %}
				{% if elevator.constructeurNom and elevator.reference %}<br />{% endif %}
				{{ elevator.getAdresseLibelle() }}
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock %}
