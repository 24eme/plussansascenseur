<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Plus sans Ascenseur{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/leaflet/leaflet.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/leaflet-extra-markers/css/leaflet.extra-markers.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/main.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="border-bottom:1px solid #d93337;">
            <a  class="navbar-brand" id="logo" href="{{ path('homepage') }}" alt="plus sans ascenseur">
                <img src="/psa_logo_300x300.png" height="150">
            </a>

          <form class="form-inline my-2 my-lg-0">
              <div class="input-group mr-sm-2">
                  <input class="form-control" type="search" placeholder="Rue, ville, Réf Ascenseur..." aria-label="Rue, ville, Réf Ascenseur..." aria-describedby="basic-addon2">
                  <div class="input-group-append">
                      <button class="btn btn-outline-secondary" type="button"><img src="/img/search.svg" alt="rechercher" class="img-fluid" style="margin-bottom:0; height:22px;"></button>
                  </div>
              </div>
          </form>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        <script type="text/javascript" src="{{ asset('lib/jquery/jquery-3.3.1.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/popper/popper.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/leaflet/leaflet.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/leaflet-extra-markers/js/leaflet.extra-markers.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/typeahead/js/typeahead.min.js') }}"></script>
        <script type="text/javascript">
			var searchUri = "{{ constant('AppBundle\\Lib\\AdresseDataGouvApi::SEARCH_URI')~constant('AppBundle\\Lib\\AdresseDataGouvApi::SEARCH_PARAM') }}" ;
        </script>
        <script type="text/javascript" src="{{ asset('lib/js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
